name: Auto Update Worker

on:
  workflow_dispatch:
    inputs:
      target_version:
        description: 'è¦æ„å»ºçš„ç‰¹å®šç‰ˆæœ¬ (ä¾‹å¦‚: 3.3.16)'
        required: true # æ‰‹åŠ¨æ‰§è¡Œæ—¶å¿…é¡»å¡«å†™ç‰ˆæœ¬å·
        default: '3.3.16'
      force_update:
        description: 'æ˜¯å¦å¼ºåˆ¶æ›´æ–°ï¼ˆå¿½ç•¥ç‰ˆæœ¬æ£€æŸ¥ï¼‰'
        required: false
        default: 'false'

permissions:
  contents: write

env:
  TARGET_REPO: bia-pain-bache/BPB-Worker-Panel
  TARGET_ZIP_FILE: worker.zip # ä¸‹è½½çš„zipæ–‡ä»¶å
  MAIN_WORKER_FILE: worker.js # zipè§£å‹åçš„ä¸»è¦æ–‡ä»¶å

jobs:
  update:
    runs-on: ubuntu-latest
    steps:
      - name: æ£€å‡ºä»“åº“
        uses: actions/checkout@v4

      - name: æ£€æŸ¥å¹¶æ›´æ–° Worker
        id: update_worker
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          # æ—¥å¿—å‡½æ•°
          log() { echo "[$(date +'%Y-%m-%d %H:%M:%S')] $1"; }

          # <-- æ ¸å¿ƒæ”¹åŠ¨ï¼šæ ¹æ®è§¦å‘äº‹ä»¶æ¥å†³å®šè¡Œä¸º
          # github.event_name çš„å€¼ä¼šæ˜¯ 'push', 'schedule', æˆ– 'workflow_dispatch'
          if [ "${{ github.event_name }}" == "workflow_dispatch" ]; then
            # --- æ‰‹åŠ¨æ‰§è¡Œé€»è¾‘ ---
            MODE="æ‰‹åŠ¨"
            TARGET_VERSION=${{ github.event.inputs.target_version }}
            log "æ‰‹åŠ¨æ¨¡å¼å¯åŠ¨ï¼Œç›®æ ‡ç‰ˆæœ¬: $TARGET_VERSION"
            # æ‰‹åŠ¨æ¨¡å¼ä¸‹ç›´æ¥è¯·æ±‚æŒ‡å®š tag çš„ API
            API_URL="https://api.github.com/repos/${TARGET_REPO}/releases/tags/${TARGET_VERSION}"
          else
            # --- è‡ªåŠ¨æ‰§è¡Œé€»è¾‘ ---
            MODE="è‡ªåŠ¨"
            log "è‡ªåŠ¨æ¨¡å¼å¯åŠ¨ï¼Œæ£€æŸ¥æœ€æ–°ç‰ˆæœ¬..."
            # è‡ªåŠ¨æ¨¡å¼ä¸‹è¯·æ±‚æœ€æ–°çš„ release API
            API_URL="https://api.github.com/repos/${TARGET_REPO}/releases/latest"
            
            # è‡ªåŠ¨æ¨¡å¼ä¸‹æ£€æŸ¥æœ¬åœ°ç‰ˆæœ¬ï¼Œå¦‚æœä¸€è‡´åˆ™æ— éœ€æ›´æ–°
            LOCAL_VERSION=$(cat version.txt 2>/dev/null || echo "")
            LATEST_TAG_NAME=$(curl -s -H "Authorization: token $GITHUB_TOKEN" $API_URL | jq -r '.tag_name')
            log "æœ¬åœ°ç‰ˆæœ¬: ${LOCAL_VERSION:-æ— }, æœ€æ–°ç‰ˆæœ¬: ${LATEST_TAG_NAME:-æœªçŸ¥}"
            if [ "$LOCAL_VERSION" = "$LATEST_TAG_NAME" ] && [ "${{ github.event.inputs.force_update }}" != "true" ]; then
              log "å·²æ˜¯æœ€æ–°ç‰ˆæœ¬ï¼Œæ— éœ€æ›´æ–°ã€‚"
              exit 0
            fi
          fi

          log "ä» $API_URL è·å– Release ä¿¡æ¯..."
          RESPONSE=$(curl -s --retry 3 -H "Authorization: token $GITHUB_TOKEN" -H "Accept: application/vnd.github.v3+json" "$API_URL")
          
          if [ $? -ne 0 ] || [[ "$RESPONSE" == *"Not Found"* ]]; then
            log "ERROR: æ— æ³•è®¿é—® GitHub API æˆ–æ‰¾ä¸åˆ°æŒ‡å®šç‰ˆæœ¬ã€‚"
            exit 1
          fi

          TAG_NAME=$(echo "$RESPONSE" | jq -r '.tag_name')
          DOWNLOAD_URL=$(echo "$RESPONSE" | jq -r '.assets[] | select(.name == "'"$TARGET_ZIP_FILE"'") | .browser_download_url')

          if [ -z "$DOWNLOAD_URL" ] || [ "$DOWNLOAD_URL" == "null" ]; then
            log "ERROR: åœ¨ç‰ˆæœ¬ $TAG_NAME ä¸­æœªæ‰¾åˆ° $TARGET_ZIP_FILE"
            exit 1
          fi
          log "æˆåŠŸè·å–ç‰ˆæœ¬ $TAG_NAME çš„ä¸‹è½½é“¾æ¥"
          
          # ä¸‹è½½
          log "ä¸‹è½½ $TARGET_ZIP_FILE..."
          wget -q -O "$TARGET_ZIP_FILE" "$DOWNLOAD_URL"
          
          log "è§£å‹ $TARGET_ZIP_FILE..."
          unzip -o "$TARGET_ZIP_FILE" # ä½¿ç”¨ -o è¦†ç›–è§£å‹

          if [ "$MODE" == "æ‰‹åŠ¨" ]; then
            # --- æ‰‹åŠ¨æ¨¡å¼ä¸‹çš„æ–‡ä»¶å¤„ç†å’Œæäº¤ä¿¡æ¯ ---
            OUTPUT_FILE="${MAIN_WORKER_FILE%.*}-${TAG_NAME}.js"
            log "æ‰‹åŠ¨æ¨¡å¼ï¼šå°† $MAIN_WORKER_FILE é‡å‘½åä¸º $OUTPUT_FILE"
            mv "$MAIN_WORKER_FILE" "$OUTPUT_FILE"
            # æ¸…ç†ä¸‹è½½çš„zipæ–‡ä»¶
            rm "$TARGET_ZIP_FILE"
            # è®¾ç½®æäº¤ä¿¡æ¯
            COMMIT_MSG="ğŸ“¦ æ‰‹åŠ¨æ„å»ºæŒ‡å®šç‰ˆæœ¬ Worker: $TAG_NAME"
          else
            # --- è‡ªåŠ¨æ¨¡å¼ä¸‹çš„æ–‡ä»¶å¤„ç†å’Œæäº¤ä¿¡æ¯ ---
            log "è‡ªåŠ¨æ¨¡å¼ï¼šæ›´æ–° version.txt æ–‡ä»¶"
            echo "$TAG_NAME" > version.txt
            # æ¸…ç†ä¸‹è½½çš„zipæ–‡ä»¶
            rm "$TARGET_ZIP_FILE"
            # è®¾ç½®æäº¤ä¿¡æ¯
            COMMIT_MSG="ğŸ”„ è‡ªåŠ¨åŒæ­¥ Worker åˆ°æœ€æ–°ç‰ˆæœ¬: $TAG_NAME"
          fi
          
          # å°†æäº¤ä¿¡æ¯è®¾ç½®ä¸ºæ­¥éª¤è¾“å‡ºï¼Œä¾›ä¸‹ä¸€æ­¥ä½¿ç”¨
          echo "commit_message=$COMMIT_MSG" >> $GITHUB_OUTPUT
          echo "tag_name=$TAG_NAME" >> $GITHUB_OUTPUT


      - name: æäº¤æ›´æ”¹
        if: steps.update_worker.conclusion == 'success' && steps.update_worker.outputs.commit_message != ''
        uses: stefanzweifel/git-auto-commit-action@v5
        with:
          commit_message: ${{ steps.update_worker.outputs.commit_message }}
          commit_author: "github-actions[bot] <github-actions[bot]@users.noreply.github.com>"
